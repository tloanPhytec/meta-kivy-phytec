[Unit]
Description=PHYTEC's Kivy demo
Requires=weston.service
After=westion.service

[Service]
Environment=WAYLAND_DISPLAY=/run/wayland-0 DISPLAY=:0 XDG_RUNTIME_DIR=/run/user/1000 KCFG_GRAPHICS_FULLSCREEN=auto KIVY_GLES_LIMITS=1 KCFG_INPUT_MOUSE='mouse,disable_on_activity' KCFG_KIVY_KEYBOARD_MODE='systemanddock'
ExecStart=/usr/bin/kivydemo

[Install]
WantedBy=graphical.target

